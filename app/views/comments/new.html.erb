<div class="form-container border-black">
  <h1>New Comment</h1>

  <%= form_with model: @comment, url: user_post_comments_path, class: "form", local: true do |form| %>
    <div class="form-items">
      <%= form.text_area :text, class: "form-fields border-black form-text", placeholder: "Write a comment..." %>
    </div>
    <div>
      <%= form.submit "Create comment", class: "btn" %>
    </div>
  <% end %>
</div>